{{!
    @template theme_snap/animated_graphics_pause

    Example context (json):
    {
        "pausegraphicsanim": "Pause Jif animation.",
        "resumegraphicsanim": "Resume Jif animation."
    }
}}

<div class="anim-play-resume-buttons">
    <button class="anim-play-button btn btn-xs" tabindex="0" aria-label="{{resumegraphicsanim}}">
        <span class="icon fa fa-play fa-fw"></span>
    </button>
    <button class="anim-pause-button btn btn-xs" tabindex="0" aria-label="{{pausegraphicsanim}}">
        <span class="icon fa fa-pause fa-fw"></span>
    </button>
</div>
